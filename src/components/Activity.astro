---
const { activity } = Astro.props;
---

<section>
    <div class='container mt-10 p-4 mx-auto rounded-lg bg-dark-purple'>
        <h2 class="text-4xl font-bold mb-4 p-5 sm:pt-20 sm:pl-20 font-recoleta">
            {activity.title}
        </h2>
        <div class="max-w-md mx-auto">
            <div class="text-xl mb-20 align-middle">
                {activity.Content && <activity.Content />}
            </div>
        </div>
    </div>
</section>